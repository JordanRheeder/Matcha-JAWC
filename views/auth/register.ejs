  <body>
      <!-- Nav starts -->
        <%- include('../includes/nav.ejs') %>
            <header id="header" class="alt">
            <div class="inner">
                <div class="container" align='center'">  
                <div class='form'> 
                    <form action="/register" method="POST"> 
                    <h1> Signup form </h1><br/>            
                    <input class="box" type="text" name="fname" id="fname" 
                    placeholder="First Name"  required /><br> 
                                        
                    <input class="box" type="text" name="sname" id="sname" 
                    placeholder="Surname"  required /><br> 
                                        
                    <input class="box" type="email" name="email" id="email" 
                    placeholder="E-Mail " required /><br> 
                                        
