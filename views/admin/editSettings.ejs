<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Account</title>
    <link rel="stylesheet" href="assets/css/account.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <link rel="shortcut icon" type="image/jpg" href="../../outputDir/favicon.ico"/>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
      <!-- Nav starts -->
        <%- include('../includes/nav.ejs') %>
            <header id="header" class="alt">
                <div style='position:absolute;left:32px;top:32px'>
                    <figure class="image is-128x128 is-rounded" style="left:42px">
                        <% if(files){ %>
                            <% files.forEach(function(files) { %>
                              <div class="card card-body mb-3">
                                <% if(files.isImage) { %>
                                  <img src="image/<%= files.filename %>" alt="">
                                  <% } else { %>
                                    <a href ="<%= files.filename %>" target ="_blank"><%= files.filename %></a>
                                      <% } %>
                              </div>
                              <% }) %>
                                <% } else { %>
                                  <p><a href='/UploadPP'>Upload a Profile Picture</a></p>
                                  <% } %>
                        <img class="is-rounded" src='' href='/editPP'></img>
                    </figure><br/>
                    
                    <a class="button" href='/editprofile'>Profile</a>  
                    <a class="button" href='/editsettings'>Settings</a>  
                </div>
                <!-- if button is pressed initialise code. look at ejs syntax -->
                <div class="inner" style='top:-50px;'>
                    <div class="container" style="text-align: center">  
                            <div class='form'> 
                            <form action="/EditAccount" method="POST"><br/>   
                                <h1> Edit Settings </h1><br/>             
                                <input class="box" type="text" name="email" id="email" 
                                placeholder="E-Mail" ><br/> 
                                <input class="box" type="text" name="fname" 
                                id="fname" placeholder="First Name" ><br/>
                                <input class="box" type="text" name="sname" 
                                id="Surname" placeholder="Surname" ><br/> 
                                <input class="box" type="password" name="password" 
                                id="password" placeholder="Password" ><br/>
                 
                                <ul>
                                  <div>
                                  <li>
                                      <input type="radio" id="f-option" name="sexuality" value='Straight'>
                                      <label for="f-option" value='men'>Males</label>
                                      <input type="radio" id="s-option" name="sexuality" value='Gay'>
                                      <label for="s-option" value='woman'>Female</label>
                                      <input type="radio" id="ft-option" name="sexuality" value='Bisexual'>
                                      <label for="ft-option" value='both'>Bisexual</label>
                                  </li>
                                  </div>
                                  </ul>
                                  <input class = 'button is-danger is-light'type="submit" id="submitDetails"
                                      name="submitDetails" value="Save Changes"><br/> 
                            </form>                               
                        </div>                
                    </div>
                </div>
            </header>
    <!-- Wrapper -->
        <%- include('../includes/footer.ejs') %>
    <!-- Scripts -->
    <%- include('../includes/end.ejs') %>







