<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=view-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="stylesheet" href="../../assets/css/account.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <link rel="shortcut icon" type="image/jpg" href="../../outputDir/favicon.ico"/>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
      <!-- Nav starts -->
        <%- include('../includes/nav.ejs') %>
            <header id="header" class="alt">
                <h2 style='position:absolute;left:800px;top:32px'>Hello, <a href='/test'><%= user %></a></h2>
               <div style='position:absolute;left:32px;top:32px'>
                <figure class="image is-128x128" style="left:42px">
                     <% if(files){ %>
                            <% files.forEach(function(files) { %>
                              
                                <% if(files.isImage) { %>
                                  <img src="image/<%= files.filename %>" alt="">
                                  <% } else { %>
                                    <a href ="<%= files.filename %>" target ="_blank"><%= files.filename %></a>
                                      <% } %>
                                  <% }) %>
                                <% } else { %>
                                  <p><a href='/UploadPP'>Upload a Profile Picture</a></p>
                                  <% } %>
                        <img src='' href='/editPP'></img> 
                    </figure><br/>
                    
                    <a class="button" href='/editprofile'>Edit Profile</a>  
                    <a class="button" href='/editsettings'>Settings</a>  
                </div>

                <!-- if button is pressed initialise code. look at ejs syntax -->
                <div class="inner">
                  <div class="columns is-multiline is-mobile">
                    <div class="column is-one-third">
                      <div class="box">
                      <p class="title is-5">column is one third</p>
                      <p class="subtitle">This column is one third</p>
                    </div>

                    </div>
                    <div class="column">
                      <div class="box">
                        <p class="title is-5">Flexible column</p>
                        <p class="subtitle">This column will take up the remaining space available.</p>
                      </div>
                    </div>
                  </div>            
                </div>
            </header>

  </body>
    <!-- Wrapper -->
        <%- include('../includes/footer.ejs') %>
    <!-- Scripts -->
        <%- include('../includes/end.ejs') %>




